<div class="">
  <h2><strong>Ouvre la page internet de ta radio web, sélectionne l'objet voulu et copie le xpath</strong></h2>
</div>

<%= form_tag songs_path, method: :post do  %>
  <div class="form-group">
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <%= label_tag :url, 'Colle ici ton url' %>
    <%= text_field_tag :url, "http://www.radio-active.net/ecouter/les-playlists/" %>
  </div>
  <div class="form-group">
    <%= label_tag :chemin_CSS, 'Colle ici ton chemin en CSS' %>
    <%= text_field_tag :chemin_CSS, '//*[@class="page"]//strong' %>
  </div>
  <div class="form-group">
    <%= submit_tag 'Scrapp !'%>
  </div>
<% end %>

<form>
  <div class="form-group">
    <label for="exampleFormControlTextarea1">Votre playlist doit apparaître ici :</label>
    <textarea class="form-control" id="exampleFormControlTextarea1" rows="20" readonly></textarea>
  </div>
</form>
