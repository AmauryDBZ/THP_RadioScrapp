<div class="">
  <h2><strong>Ouvre la page internet de ta radio web, sélectionne l'objet voulu et copie le xpath</strong></h2>
</div>

<%= form_tag songs_path, method: :post do  %>
<div class="form-group">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <%= label_tag :url, 'Colle ici ton url' %>
  <%= text_field_tag :url, "https://www.nostalgie.fr/playlists/playlist-nostalgie" %>
</div>
<div class="form-group">
  <%= label_tag :xpath1, 'Colle ici ton chemin xpath 1 (artiste)' %>
  <%= text_field_tag :xpath1, "//*[@class='listPlaylist']//*[@class='cardPlaylist-content']/h2" %>
</div>
<div class="form-group">
  <%= label_tag :xpath2, 'Colle ici ton chemin xpath 2 (titre)' %>
  <%= text_field_tag :xpath2, "//*[@class='listPlaylist']//*[@class='cardPlaylist-content']/p" %>
</div>
<div class="form-group">
  <%= submit_tag 'Scrapp !'%>
</div>
<% end %>

<form>
  <div class="form-group">
    <label for="exampleFormControlTextarea1">Votre playlist doit apparaître ici :</label>
    <%= render "allsongs" %>
  </div>
</form>

<div class="d-flex justify-content-center">
  <%= link_to "Télécharger cette playlist !", new_export_path(format: 'csv'), class: "btn btn-primary" %>
</div>
