<div class="">
  <h2><strong>Ouvre la page internet de ta radio web, sélectionne l'objet voulu et copie le CSS_path</strong></h2>
</div>

<%= form_tag songs_path, method: :post do  %>
  <div class="form-group">
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <%= label_tag :url, 'Colle ici ton url' %>
    <%= text_field_tag :url, "https://www.ouifm.fr/cest-quoi-ce-titre/" %>
  </div>
  <div class="form-group">
    <%= label_tag :chemin_CSS, 'Colle ici ton chemin en CSS' %>
    <%= text_field_tag :chemin_CSS %>
  </div>
  <div class="form-group">
    <%= submit_tag 'Scrapp !'%>
  </div>
<% end %>

